PS1='[\u@\h \W]\$ '

#Allow for global scripts
export PATH="$HOME/.local/bin:$PATH"

#Zoxide program
eval "$(zoxide init bash)"

# oh my posh terminal
eval "$(oh-my-posh init bash --config /usr/share/oh-my-posh/themes/powerline.omp.json)"
eval "$(ssh-agent -s)"
ssh-add ~/.ssh/id_ed25519 2>/dev/null

# Change wallpaper
[[ $PS1 && -f /usr/bash-completion/bash_completion ]] && \source /usr/share/bash-completion/bash_completion

. "$HOME/.cargo/env"


